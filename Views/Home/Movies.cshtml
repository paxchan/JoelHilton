@model Movie

<h1>Movie Database</h1>

<div class="form-body">
    <form method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" class="form-control"/>
        <span asp-validation-for="Category" class="text-danger"></span>
        <br/>

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
        <br/>

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" class="form-control" min="1888" max="2025"/>
        <span asp-validation-for="Year" class="text-danger"></span>
        <br/>

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" class="form-control"/>
        <span asp-validation-for="Director" class="text-danger"></span>
        <br/>

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
        <br/>
        
        <input asp-for="Edited" type="checkbox"/>
        <label asp-for="Edited">Edited</label>
        <span asp-validation-for="Edited" class="text-danger"></span>
        <br/>

        <label asp-for="Lent">Lent to:</label>
        <input asp-for="Lent" class="form-control"/>
        <span asp-validation-for="Lent" class="text-danger"></span>
        <br/>

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" class="form-control" maxlength="25"/>
        <span asp-validation-for="Notes" class="text-danger"></span>
        <br/>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}